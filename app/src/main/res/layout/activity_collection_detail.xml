<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionDetailActivity">

    <!--상단 바-->
    <ImageView
        android:id="@+id/collectionDetail_iv_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/top"
        android:contentDescription="상단 타이틀" />

    <ImageView
        android:id="@+id/collectionDetail_btn_back"
        android:layout_width="12dp"
        android:layout_height="23dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="@id/collectionDetail_iv_top"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_iv_top"
        android:src="@drawable/arrow_right"/>

    <View
        android:id="@+id/collectionDetail_v_backArea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_btn_back"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_btn_back"
        app:layout_constraintTop_toTopOf="@id/collectionDetail_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/collectionDetail_btn_back"/>

    <TextView
        android:id="@+id/collectionDetail_tv_titleSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="개인 메뉴"
        android:textSize="11sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/noto_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/collectionDetail_iv_top"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_iv_top"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_iv_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="붕어"
        android:textSize="18sp"
        android:fontFamily="@font/noto_medium"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_titleSub"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_titleSub"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_tv_titleSub"/>
    <!--상단 바-->
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_top"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/collectionDetail_cv_fish"
                android:layout_width="292dp"
                android:layout_height="292dp"
                android:layout_marginTop="29dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/collectionDetail_cv_iv_fish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/collection_icon_carp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_dateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp"
                android:text="최초 수집일"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_fish"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_fish"/>

            <ImageView
                android:id="@+id/collectionDetail_cv_iv_line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_dateTitle"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_dateTitle"
                app:layout_constraintEnd_toEndOf="@id/collectionDetail_cv_tv_dateTitle"
                android:src="@drawable/menu_line"/>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2021년 11월 7일"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_iv_line1"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_dateTitle"/>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_countTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="수집 횟수"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_date"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_dateTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_cv_iv_line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_countTitle"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_countTitle"
                app:layout_constraintEnd_toEndOf="@id/collectionDetail_cv_tv_countTitle"
                android:src="@drawable/menu_line"/>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="5회"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_iv_line2"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_countTitle"/>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_sizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="최대 크기"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_count"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_dateTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_cv_iv_line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_sizeTitle"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_sizeTitle"
                app:layout_constraintEnd_toEndOf="@id/collectionDetail_cv_tv_sizeTitle"
                android:src="@drawable/menu_line"/>

            <TextView
                android:id="@+id/collectionDetail_cv_tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="40cm"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_iv_line3"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_cv_tv_sizeTitle"/>

            <android.support.constraint.Guideline
                android:id="@+id/collection_cv_gl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


            <ImageView
                android:layout_width="156dp"
                android:layout_height="39dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_size"
                app:layout_constraintEnd_toEndOf="@id/collection_cv_gl"
                android:src="@drawable/collection_detail_change"/>

            <ImageView
                android:layout_width="156dp"
                android:layout_height="39dp"
                android:layout_marginTop="34dp"
                android:layout_marginStart="7dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_tv_size"
                app:layout_constraintStart_toStartOf="@id/collection_cv_gl"
                android:src="@drawable/collection_detail_delete"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>