<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="54dp"
        android:paddingBottom="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectionDetail_btn_back"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/collectionDetail_cv_fish"
                android:layout_width="292dp"
                android:layout_height="292dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/collectionDetail_cv_iv_fish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/collection_icon_carp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/collectionDetail_tv_dateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="42dp"
                android:text="최초 수집일"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_bold"
                android:textColor="@color/colorDark"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_cv_fish"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/collectionDetail_iv_line1"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_tv_dateTitle"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_dateTitle"
                app:layout_constraintEnd_toStartOf="@id/collectionDetail_tv_dateTitle"
                android:src="@drawable/title_line"/>

            <TextView
                android:id="@+id/collectionDetail_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2021년 11월 7일"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_line1"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_dateTitle"/>

            <TextView
                android:id="@+id/collectionDetail_tv_locationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="최초 수집장소"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_bold"
                android:textColor="@color/colorDark"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_date"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_dateTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_iv_line2"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_tv_locationTitle"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_locationTitle"
                app:layout_constraintEnd_toStartOf="@id/collectionDetail_tv_locationTitle"
                android:src="@drawable/title_line"/>

            <TextView
                android:id="@+id/collectionDetail_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="삼막곡 낚시터"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_line2"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_locationTitle"/>

            <TextView
                android:id="@+id/collectionDetail_tv_countTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="수집 횟수"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_bold"
                android:textColor="@color/colorDark"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_location"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_locationTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_iv_line3"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_tv_countTitle"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_countTitle"
                app:layout_constraintEnd_toStartOf="@id/collectionDetail_tv_countTitle"
                android:src="@drawable/title_line"/>

            <TextView
                android:id="@+id/collectionDetail_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="5"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_line3"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_countTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회"
                android:textColor="#333333"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/collectionDetail_tv_count"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_count"/>

            <TextView
                android:id="@+id/collectionDetail_tv_sizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="최대 크기"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_bold"
                android:textColor="@color/colorDark"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_count"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_dateTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_iv_line4"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_tv_sizeTitle"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_sizeTitle"
                app:layout_constraintEnd_toStartOf="@id/collectionDetail_tv_sizeTitle"
                android:src="@drawable/title_line"/>

            <TextView
                android:id="@+id/collectionDetail_tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="40"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_line4"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_sizeTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textColor="#333333"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/collectionDetail_tv_size"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_size"/>

            <TextView
                android:id="@+id/collectionDetail_tv_infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="추가 정보"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_bold"
                android:textColor="@color/colorDark"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_size"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_dateTitle"/>

            <ImageView
                android:id="@+id/collectionDetail_iv_line5"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_tv_infoTitle"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_tv_infoTitle"
                app:layout_constraintEnd_toStartOf="@id/collectionDetail_tv_infoTitle"
                android:src="@drawable/title_line"/>

            <TextView
                android:id="@+id/collectionDetail_tv_info"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:text="가장 좋아하는 물고기"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_regular"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_iv_line5"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_infoTitle"/>

            <android.support.constraint.Guideline
                android:id="@+id/collection_cv_gl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/collectionDetail_btn_change"
                android:layout_width="325dp"
                android:layout_height="39dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/collection_detail_change"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보 변경"
                android:textSize="14sp"
                android:fontFamily="@font/noto_medium"
                android:textColor="@color/colorDark"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/collectionDetail_btn_change"
                app:layout_constraintEnd_toEndOf="@id/collectionDetail_btn_change"
                app:layout_constraintTop_toTopOf="@id/collectionDetail_btn_change"
                app:layout_constraintBottom_toBottomOf="@id/collectionDetail_btn_change"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <!--상단 바-->
    <ImageView
        android:id="@+id/collectionDetail_iv_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/top"
        android:contentDescription="상단 타이틀" />

    <ImageView
        android:id="@+id/collectionDetail_btn_back"
        android:layout_width="12dp"
        android:layout_height="23dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="@id/collectionDetail_iv_top"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_iv_top"
        android:src="@drawable/arrow_right"/>

    <View
        android:id="@+id/collectionDetail_v_backArea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_btn_back"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_btn_back"
        app:layout_constraintTop_toTopOf="@id/collectionDetail_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/collectionDetail_btn_back"/>

    <TextView
        android:id="@+id/collectionDetail_tv_titleSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="개인 메뉴"
        android:textSize="11sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/noto_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/collectionDetail_iv_top"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_iv_top"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_iv_top"/>

    <TextView
        android:id="@+id/collectionDetail_tv_titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="붕어"
        android:textSize="18sp"
        android:fontFamily="@font/noto_medium"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/collectionDetail_tv_titleSub"
        app:layout_constraintStart_toStartOf="@id/collectionDetail_tv_titleSub"
        app:layout_constraintEnd_toEndOf="@id/collectionDetail_tv_titleSub"/>
    <!--상단 바-->

</android.support.constraint.ConstraintLayout>