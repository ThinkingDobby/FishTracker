<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/detail_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="14sp"
        android:textColor="@color/colorDark"
        android:fontFamily="@font/noto_bold"
        android:includeFontPadding="false"
        android:layout_margin="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_tv_title"
        app:layout_constraintBottom_toTopOf="@id/detail_btn_bot"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_tv_fish1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잉어"
                android:textSize="16sp"
                android:layout_marginTop="26dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/noto_medium"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/detail_tv_fish1Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="11sp"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/detail_tv_fish1"
                app:layout_constraintBottom_toBottomOf="@id/detail_tv_fish1"
                app:layout_constraintStart_toEndOf="@id/detail_tv_fish1"/>

            <TextView
                android:id="@+id/detail_tv_fish2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가물치"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorDark"
                android:fontFamily="@font/noto_medium"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/detail_tv_fish1"
                app:layout_constraintStart_toStartOf="@id/detail_tv_fish1"/>

            <TextView
                android:id="@+id/detail_tv_fish2Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textSize="11sp"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/detail_tv_fish2"
                app:layout_constraintBottom_toBottomOf="@id/detail_tv_fish2"
                app:layout_constraintStart_toEndOf="@id/detail_tv_fish2"/>

            <TextView
                android:id="@+id/detail_tv_fish3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배스"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorDark"
                android:fontFamily="@font/noto_medium"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/detail_tv_fish2"
                app:layout_constraintStart_toStartOf="@id/detail_tv_fish1"/>

            <TextView
                android:id="@+id/detail_tv_fish3Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                android:textSize="11sp"
                android:textColor="@color/colorGray"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/detail_tv_fish3"
                app:layout_constraintBottom_toBottomOf="@id/detail_tv_fish3"
                app:layout_constraintStart_toEndOf="@id/detail_tv_fish3"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


<ImageView
        android:id="@+id/detail_btn_bot"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/detail_bot"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="13sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/noto_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/detail_btn_bot"
        app:layout_constraintBottom_toBottomOf="@id/detail_btn_bot"
        app:layout_constraintStart_toStartOf="@id/detail_btn_bot"
        app:layout_constraintEnd_toEndOf="@id/detail_btn_bot"/>

</android.support.constraint.ConstraintLayout>